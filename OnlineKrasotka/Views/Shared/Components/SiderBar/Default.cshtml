@model IQueryable<ThingItem>

@if(Model?.Any() == true)
   {
       <section>
           <h2>Наши товары</h2>
           <ul class="small-image-list">
               @foreach(ThingItem item in Model)
                {
                   <li>
                       <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">
                           <img src="~/images/@item.TitleImagesPath" alt="" class="left" />
                       </a>
                       <h4>@item.Name</h4>
                       <p>@item.ShortDesk</p>
                   </li>
                }
           </ul>
       </section>
   }